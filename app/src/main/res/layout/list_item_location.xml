<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
        <ImageView android:id="@+id/img"
            android:descendantFocusability="blocksDescendants"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/lst_location_img_height"  />

        <TextView android:id="@+id/txt"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="@dimen/lst_location_item_height"
            android:textSize="@dimen/lst_location_text_size"/>

        <TextView android:id="@+id/txt2"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_gravity="end"
            android:gravity="center_vertical|end "
            android:paddingEnd="10dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="@dimen/lst_location_item_height"
            android:textSize="@dimen/lst_location_text_small"/>
</LinearLayout>